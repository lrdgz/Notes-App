<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 test-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="https://avatars2.githubusercontent.com/u/22897647?s=460&v=4"  alt="Logo" class="logo mx-auto d-block m-4 rounded-circle">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" name="email" autofocus placeholder="E-Mail" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" autofocus placeholder="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">SigIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>